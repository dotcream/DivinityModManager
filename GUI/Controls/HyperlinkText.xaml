<TextBlock
	x:Class="DivinityModManager.Controls.HyperlinkText"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:DivinityModManager.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="MainTextBlock"
	mc:Ignorable="d">
	<Hyperlink x:Name="Hyperlink">
		<TextBlock Text="{Binding ElementName=MainTextBlock, Path=DisplayText}" />
	</Hyperlink>
</TextBlock>
