<Application
	x:Class="DivinityModManager.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
	xmlns:local="clr-namespace:DivinityModManager"
	ShutdownMode="OnMainWindowClose"
	Startup="Application_Startup"
	StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/DivinityModManager;component/Themes/Light.xaml" />
				<ResourceDictionary Source="pack://application:,,,/DivinityModManager;component/Themes/Dark.xaml" />
				<ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
